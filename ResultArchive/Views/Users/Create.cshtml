
@model ResultArchive.Models.ApplicationUser

@section LeftSidebar {
    <partial name="~/Views/Partials/_Sidebar.cshtml" />
}
<!-- Page Content-->
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Create a user</h4>
                        <p class="text-muted mb-4">
                            Here you are to create <code class="highlighter-rouge">Users</code> to manage the system
                        </p>

                        <form method="post">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">First Name</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" asp-for="FirstName" placeholder="Eg: Vitalis">
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-8">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">Last Name</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" asp-for="LastName" placeholder="Eg: Ogbonna">
                                        </div>
                                    </div>

                                </div>

                                <div class="col-lg-8">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">User Email</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="email" asp-for="Email" placeholder="agavitalis@gmail.com">
                                        </div>
                                    </div>

                                </div>

                                <div class="col-lg-8">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">User Password</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="password"  name="Password">
                                        </div>
                                    </div>

                                </div>

                                <div class="col-lg-8">
                                    <div class="form-group row">
                                         <label for="example-text-input" class="col-sm-4 col-form-label text-right">Is User Super Admin?</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="checkbox" asp-for="IsSuperAdmin ">
                                        </div>
                                    </div>

                                </div>

                                <div class="col-lg-4 d-flex align-items-end">
                                    <div class="form-group row">
                                        <button type="submit" class="btn btn-primary ml-2">Create User</button>

                                    </div>
                                </div>

                                @if (ViewBag != null)
                                {
                                    <partial name="~/Views/Partials/_Alert.cshtml" />
                                }

                            </div>
                        </form>
                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end col-->
        </div><!--end row-->



    </div><!-- container -->

    <partial name="~/Views/Partials/_Footer.cshtml" />
</div>
<!-- end page content -->