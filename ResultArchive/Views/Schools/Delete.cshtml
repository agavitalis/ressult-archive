@model ResultArchive.Models.School

@section LeftSidebar {
    <partial name="~/Views/Partials/_Sidebar.cshtml" />
}
<!-- Page Content-->
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Create Sessions</h4>
                        <p class="text-muted mb-4">
                            Here you create <code class="highlighter-rouge">Sessions</code> used in the system.
                        </p>

                        <form method="post" asp-action="DeleteConfirm">
                            <div class="row">
                                <input type="hidden" asp-for="Id" />
                                <div class="col-lg-8">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">School Name</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" readonly asp-for="Name" placeholder="University of Nigeria">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">School Acronym</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" readonly required asp-for="Acronym" placeholder="UNN">
                                            <span asp-validation-for="Acronym" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">Comments(optional)</label>
                                        <div class="col-sm-8">
                                            <textarea class="form-control" readonly asp-for="Comments"></textarea>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-lg-4">
                                    <div class="col-md-12">
                                        <div class="alert alert-outline-danger alert-danger-shadow mb-0 fade show" role="alert">

                                            <i class="mdi mdi-trash-can alert-icon"></i>
                                            @ViewBag.Warning
                                        </div>
                                    </div>
                                    <div class="col-md-12 mt-3">
                                        <div class="form-group row">
                                            <button type="submit" class="btn btn-primary ml-2">Delete School</button>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </form>

                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end col-->
        </div><!--end row-->



    </div><!-- container -->

    <partial name="~/Views/Partials/_Footer.cshtml" />
</div>
<!-- end page content -->