
@model ResultArchive.Models.Result

@section LeftSidebar {
    <partial name="~/Views/Partials/_Sidebar.cshtml" />
}
<!-- Page Content-->
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Edit Result</h4>
                        <p class="text-muted mb-4">
                            Here you edit <code class="highlighter-rouge">Results</code> registered in this system.
                        </p>

                        <form method="post">
                            <div class="row">
                                <input type="hidden" asp-for="Id" />
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">First Name</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" required asp-for="FirstName" placeholder="FirstName">
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">Last Name</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" required asp-for="LastName" placeholder="LastName">
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">Other Name</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" required asp-for="OtherName" placeholder="OtherName">
                                            <span asp-validation-for="OtherName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                	

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">Exam Score</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" required asp-for="RegNumber" placeholder="CVScore">
                                            <span asp-validation-for="RegNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">Total Score</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" required asp-for="CVScore" placeholder="CVScore">
                                            <span asp-validation-for="CVScore" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">Total Score</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" required asp-for="ExamScore" placeholder="Total Score">
                                            <span asp-validation-for="ExamScore" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">Total Score</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" required asp-for="TotalScore" placeholder="CVScore">
                                            <span asp-validation-for="TotalScore" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">Total Score</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" required asp-for="CourseCode" placeholder="Course Code">
                                            <span asp-validation-for="CourseCode" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right">Total Score</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" required asp-for="Department" placeholder="Department">
                                            <span asp-validation-for="Department" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-lg-4 d-flex align-items-end">
                                    <div class="form-group row">
                                        <button type="submit" class="btn btn-primary ml-2">Edit Result</button>

                                    </div>
                                </div>
                                @if (ViewBag != null)
                                {
                                    <partial name="~/Views/Partials/_Alert.cshtml" />
                                }

                            </div>
                        </form>

                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end col-->
        </div><!--end row-->

    </div><!-- container -->

    <partial name="~/Views/Partials/_Footer.cshtml" />
</div>
<!-- end page content -->