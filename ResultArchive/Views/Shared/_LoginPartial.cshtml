@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm">

        <a  class="dropdown-item" href="#"> <i class="dripicons-user text-muted mr-2"></i> Hello @UserManager.GetUserName(User)!</a>
       
        <button type="submit" class="dropdown-item"> <i class="dripicons-exit text-muted mr-2"></i>Logout</button>


    </form>
}
else
{
   

        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login"><i class="dripicons-lock text-muted mr-2"></i> Login</a>
    
}

